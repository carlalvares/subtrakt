{
  "manifest_version": 2,

  "name": "Hello World",
  "description": "A simple page-scraping extension for Chrome",
  "version": "1.0",
  "author": "@thomasforth",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "webNavigation"
    ],
  "browser_action": {
    "default_icon": "panthers.png",
    "default_popup": "popup.html"
  }
}
